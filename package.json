{
  "name": "@realmq/customer-messaging",
  "version": "0.0.0",
  "description": "An intercom-like customer messaging reference implementation on top of RealMQ's instant messaging backbone.",
  "author": "RealMQ GmbH <service@realmq.com> (https://realmq.com)",
  "license": "MIT",
  "repository": "https://github.com/realmq/customer-messaging",
  "private": true,
  "scripts": {
    "precommit": "lint-staged",
    "lint": "xo",
    "lint-fix": "xo --fix",
    "start": "node server",
    "test": "echo 'No tests, yet' && exit 1",
    "build-agent": "mkdir -p public/js && browserify assets/js/agent.js > public/js/agent.js"
  },
  "main": "server.js",
  "engines": {
    "node": ">= 8"
  },
  "lint-staged": {
    "*.js": [
      "yarn lint-fix",
      "git add"
    ]
  },
  "xo": {
    "space": true,
    "prettier": true
  },
  "devDependencies": {
    "browserify": "^16.1.1",
    "husky": "^0.14.3",
    "lint-staged": "^7.0.4",
    "vueify": "^9.4.1",
    "xo": "^0.20.3"
  },
  "dependencies": {
    "@realmq/node-sdk": "gitlab.com:realmq/realmq-node-sdk.git",
    "chalk": "^2.3.2",
    "dotenv": "^5.0.1",
    "express": "^4.16.3",
    "express-basic-auth": "^1.1.4",
    "morgan": "^1.9.0",
    "pug": "^2.0.3",
    "vue": "^2.5.16"
  },
  "browserify": {
    "transform": [
      "vueify"
    ]
  },
  "browser": {
    "vue": "vue/dist/vue.common.js"
  }
}
